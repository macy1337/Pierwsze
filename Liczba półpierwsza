#include <iostream>
using namespace std;

bool CzyPierwsza(int n)
{
    if (n < 2) return false;
    else
    {
        for (int i = 2; i * i <= n; i++)
        {
            if (n % i == 0) return false;
        }
    }
    return true;
}

int Dzielnik(int n)
{
    int dzielnik = 2;
    while (dzielnik <= n)
    {
        while (n % dzielnik == 0)
        {
            return dzielnik;
            n /= dzielnik;
        }
        dzielnik++;
    }
    return 0;
}

bool CzyPolpierwsza(int n)
{
    if (!CzyPierwsza(n) && CzyPierwsza(n / Dzielnik(n)) && CzyPierwsza(Dzielnik(n))) return true;
    else return false;
}

int main()
{
    int n;
    cout << "Podaj liczbÄ™: ";
    cin >> n;
    cout << CzyPolpierwsza(n) << endl;
    return 0;
}
