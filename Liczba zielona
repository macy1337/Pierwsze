#include <iostream>
#include <string>
using namespace std;

bool CzyPierwsza(int n)
{
    if (n < 2) return false;
    else
    {
        for (int i = 2; i * i <= n; i++)
        {
            if (n % i == 0) return false;
        }
    }
    return true;
}

int Roznica(int n)
{
    string str = to_string(n);
    int roznica = str[0] - 48;
    for (int i = 1; i < str.size(); i++)
    {
        int t = str[i] - 48;
        roznica -= t;
    }
    return abs(roznica);
}

bool CzyZielona(int n)
{
    if (CzyPierwsza(n) && CzyPierwsza(Roznica(n))) return true;
    else return false;
}

int main()
{
    int n;
    cout << "Podaj liczbÄ™: ";
    cin >> n;
    cout << CzyZielona(n) << endl;
    return 0;
}
